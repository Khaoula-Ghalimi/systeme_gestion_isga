@model IEnumerable<systeme_gestion_isga.Features.TeachingUnit.ViewModels.TeachingUnitVM>

@{
    ViewBag.Title = "Teaching Units";
}



<div class="container-fluid p-4">

    <!-- Header -->
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h4 class="fw-bold text-white">Teaching Units</h4>

        <a href="@Url.Action("Create")" class="btn btn-success">
            <i data-lucide="plus-circle"></i>
            Add Teaching Unit
        </a>
    </div>

    <!-- Table -->
    <div class="card bg-dark border-0 shadow-sm">
        <div class="card-body p-0">

            <table class="table table-dark table-hover table-striped mb-0 align-middle">
                <thead class="table-secondary text-dark">
                    <tr>
                        <th>#</th>
                        <th>Academic Year</th>
                        <th>Level</th>
                        <th>Semester</th>
                        <th>Teacher</th>
                        <th>Module</th>
                        <th class="text-center">Actions</th>
                    </tr>
                </thead>

                <tbody>
                    @if (!Model.Any())
                    {
                        <tr>
                            <td colspan="7" class="text-center text-muted py-4">
                                No teaching units found.
                            </td>
                        </tr>
                    }
                    else
                    {
                        foreach (var t in Model)
                        {
                            <tr>
                                <td>@t.Id</td>
                                <td>@t.AcademicYearName</td>
                                <td>@t.LevelName</td>
                                <td>@t.SemesterName</td>
                                <td>@t.TeacherName</td>
                                <td>@t.ModuleMatiereName</td>

                                <td class="text-center">
                                    <a href="@Url.Action("Edit", new { id = t.Id })"
                                       class="btn btn-sm me-1 text-primary">
                                        <i data-lucide="pencil"></i>
                                    </a>

                                    <button type="button"
                                            class="btn btn-sm text-danger"
                                            data-bs-toggle="modal"
                                            data-bs-target="#deleteTeachingUnitModal"
                                            data-id="@t.Id"
                                            data-ay="@t.AcademicYearName"
                                            data-sem="@t.SemesterName"
                                            data-teacher="@t.TeacherName"
                                            data-module="@t.ModuleMatiereName">
                                        <i data-lucide="trash-2"></i>
                                    </button>
                                </td>
                            </tr>
                        }
                    }
                </tbody>
            </table>

        </div>
    </div>
</div>

<!-- DELETE MODAL -->
<div class="modal fade" id="deleteTeachingUnitModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content bg-dark text-white border-0 shadow">

            <div class="modal-header border-secondary">
                <h5 class="modal-title d-flex align-items-center gap-2">
                    <i data-lucide="alert-triangle"></i>
                    Confirm Delete
                </h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
            </div>

            <div class="modal-body">
                <p>Are you sure you want to delete this teaching unit?</p>

                <div class="bg-body-tertiary rounded p-3 small">
                    <div><span class="text-secondary">Academic Year:</span> <span id="dAy"></span></div>
                    <div><span class="text-secondary">Semester:</span> <span id="dSem"></span></div>
                    <div><span class="text-secondary">Teacher:</span> <span id="dTeacher"></span></div>
                    <div><span class="text-secondary">Module:</span> <span id="dModule"></span></div>
                </div>

                <div class="text-warning small mt-3">
                    This action cannot be undone.
                </div>
            </div>

            <div class="modal-footer border-secondary">
                <button type="button" class="btn btn-outline-light" data-bs-dismiss="modal">
                    Cancel
                </button>

                @using (Html.BeginForm("DeleteConfirmed", "TeachingUnit", FormMethod.Post, new { id = "deleteForm" }))
                {
                    @Html.AntiForgeryToken()
                    <input type="hidden" name="id" id="dId" />
                    <button type="submit" class="btn btn-danger">
                        <i data-lucide="trash-2"></i>
                        Delete
                    </button>
                }
            </div>

        </div>
    </div>
</div>

@section scripts {
    <script>
        document.addEventListener("DOMContentLoaded", function () {
            const modal = document.getElementById("deleteTeachingUnitModal");

            modal.addEventListener("show.bs.modal", function (e) {
                const btn = e.relatedTarget;

                document.getElementById("dId").value = btn.getAttribute("data-id");
                document.getElementById("dAy").textContent = btn.getAttribute("data-ay");
                document.getElementById("dSem").textContent = btn.getAttribute("data-sem");
                document.getElementById("dTeacher").textContent = btn.getAttribute("data-teacher");
                document.getElementById("dModule").textContent = btn.getAttribute("data-module");

                if (window.lucide) lucide.createIcons();
            });

            if (window.lucide) lucide.createIcons();
        });
    </script>
}
