@model systeme_gestion_isga.Features.Auth.ViewModels.LoginViewModel



<main class="w-100 h-100 d-flex justify-content-center align-items-center">
    @using (Html.BeginForm(null, null, FormMethod.Post, new { @class = "login-form d-flex flex-column align-items-center bg-white p-5 rounded-3 border", style = "min-width:350px;width:400px;" }))
    {
    <img class="mb-4" src="~/Content/Images/logo.png" alt="Logo" width="130">
    <h1 class="h3 mb-3 fw-normal">Please sign in</h1>

        if (ViewBag.Error != null)
        {
    <div class="alert alert-danger w-100 mb-3" role="alert">
        @ViewBag.Error
    </div>
        }

    <div class="mb-3 w-100">
        <div class="form-floating w-100">
            @Html.TextBoxFor(m => m.Username, new
            {
                @class = "form-control",
                @id = "floatingUsername",
                placeholder = "Username",
                type = "text"
            })
            <label for="floatingUsername">Username</label>
        </div>
    </div>

    <div class="mb-3 w-100">
        <div class="form-floating w-100">
            @Html.PasswordFor(m => m.Password, new
       {
           @class = "form-control",
           @id = "floatingPassword",
           placeholder = "********",

       })
            <label for="floatingPassword">Password</label>
        </div>
    </div>

    <div class="mb-4 w-100">
        <div class="form-check w-100">
            @Html.CheckBoxFor(m => m.RememberMe, new
       {
           @class = "form-check-input",
           @id = "rememberMe"

       })
            <label class="form-check-label" for="rememberMe">Remember me</label>
        </div>
    </div>

    <button type="submit" class="btn btn-danger w-100">Login</button>

    }


</main>