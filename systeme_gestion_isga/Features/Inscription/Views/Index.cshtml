@model IEnumerable<systeme_gestion_isga.Features.Inscription.ViewModels.InscriptionVM>

@{
    ViewBag.Title = "Inscriptions";
}

<div class="container-fluid p-4">

    <!-- Flash messages -->
    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i data-lucide="check-circle-2"></i>
            <span class="ms-1">@TempData["Success"]</span>
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }
    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i data-lucide="alert-triangle"></i>
            <span class="ms-1">@TempData["Error"]</span>
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <!-- Header -->
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h4 class="fw-bold text-white">Inscriptions</h4>

        <a href="@Url.Action("Create")" class="btn btn-success">
            <i data-lucide="plus-circle"></i>
            Add Inscription
        </a>
    </div>

    <!-- Table -->
    <div class="card bg-dark border-0 shadow-sm">
        <div class="card-body p-0">
            <table class="table table-dark table-hover table-striped mb-0 align-middle">
                <thead class="table-secondary text-dark">
                    <tr>
                        <th style="width:80px">#</th>
                        <th>Student</th>
                        <th>Academic Year</th>
                        <th>Program</th>
                        <th>Level</th>
                        <th style="width:160px">Inscription Date</th>
                        <th class="text-center" style="width:140px">Actions</th>
                    </tr>
                </thead>

                <tbody>
                    @if (Model == null || !Model.Any())
                    {
                        <tr>
                            <td colspan="7" class="text-center text-muted py-4">
                                No inscriptions found.
                            </td>
                        </tr>
                    }
                    else
                    {
                        foreach (var i in Model)
                        {
                            // We only have IDs in InscriptionVM from your controller,
                            // so we show safe fallbacks here.
                            var studentText = i.StudentName;
                            var yearText = (i.AcademicYearId.HasValue ? ("#" + i.AcademicYearId.Value) : "-");
                            var programText = (i.ProgramAcademicYearId.HasValue ? ("#" + i.ProgramAcademicYearId.Value) : "-");
                            var levelText = (i.LevelId > 0) ? ("#" + i.LevelId) : "-";
                            var dateText = (i.InscriptionDate == default(DateTime))
                                ? "-"
                                : i.InscriptionDate.ToString("yyyy-MM-dd");

                            <tr>
                                <td>@i.Id</td>
                                <td>@studentText</td>
                                <td>@yearText</td>
                                <td>@programText</td>
                                <td>@levelText</td>
                                <td>@dateText</td>

                                <td class="text-center">
                                    <a href="@Url.Action("Edit", new { id = i.Id })"
                                       class="btn btn-sm me-1 text-primary"
                                       title="Edit">
                                        <i data-lucide="pencil"></i>
                                    </a>

                                    <button type="button"
                                            class="btn btn-sm text-danger"
                                            title="Delete"
                                            data-bs-toggle="modal"
                                            data-bs-target="#deleteInscriptionModal"
                                            data-id="@i.Id"
                                            data-student="@studentText"
                                            data-level="@levelText"
                                            data-date="@dateText">
                                        <i data-lucide="trash-2"></i>
                                    </button>
                                </td>
                            </tr>
                        }
                    }
                </tbody>
            </table>

        </div>
    </div>
</div>

<!-- DELETE MODAL -->
<div class="modal fade" id="deleteInscriptionModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content bg-dark text-white border-0 shadow">

            <div class="modal-header border-secondary">
                <h5 class="modal-title d-flex align-items-center gap-2">
                    <i data-lucide="alert-triangle"></i>
                    Confirm Delete
                </h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
            </div>

            <div class="modal-body">
                <p>Are you sure you want to delete this inscription?</p>

                <div class="bg-body-tertiary rounded p-3 small">
                    <div><span class="text-secondary">Student:</span> <span id="dStudent"></span></div>
                    <div><span class="text-secondary">Level:</span> <span id="dLevel"></span></div>
                    <div><span class="text-secondary">Inscription Date:</span> <span id="dDate"></span></div>
                </div>

                <div class="text-warning small mt-3">
                    This action cannot be undone.
                </div>
            </div>

            <div class="modal-footer border-secondary">
                <button type="button" class="btn btn-outline-light" data-bs-dismiss="modal">
                    Cancel
                </button>

                @using (Html.BeginForm("DeleteConfirmed", "Inscription", FormMethod.Post, new { id = "deleteForm" }))
                {
                    @Html.AntiForgeryToken()
                    <input type="hidden" name="id" id="dId" />
                    <button type="submit" class="btn btn-danger">
                        <i data-lucide="trash-2"></i>
                        Delete
                    </button>
                }
            </div>

        </div>
    </div>
</div>

@section scripts {
    <script>
        document.addEventListener("DOMContentLoaded", function () {
            const modal = document.getElementById("deleteInscriptionModal");

            modal.addEventListener("show.bs.modal", function (e) {
                const btn = e.relatedTarget;

                document.getElementById("dId").value = btn.getAttribute("data-id");
                document.getElementById("dStudent").textContent = btn.getAttribute("data-student");
                document.getElementById("dLevel").textContent = btn.getAttribute("data-level");
                document.getElementById("dDate").textContent = btn.getAttribute("data-date");

                if (window.lucide) lucide.createIcons();
            });

            if (window.lucide) lucide.createIcons();
        });
    </script>
}
