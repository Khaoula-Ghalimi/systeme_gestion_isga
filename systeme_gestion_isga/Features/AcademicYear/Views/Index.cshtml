@model IEnumerable<systeme_gestion_isga.Features.AcademicYear.ViewModels.AcademicYearVM>

@{
    ViewBag.Title = "Academic Year";
}

<div class="container-fluid p-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h4 class="fw-bold text-white">Academic Year</h4>

        <a href="@Url.Action("Create")" class="btn btn-success">
            <i class="bi bi-plus-circle"></i> Add Academic Year
        </a>
    </div>
    <div class="card bg-dark border-0 shadow-sm">
        <div class="card-body p-4">
            <div class="row">
                @foreach (var year in Model)
                {
                    <div class="col-xl-3 col-lg-4 col-md-6 mb-4">
                        <div class="card bg-danger text-white h-100 shadow-sm border-0">

                            <div class="card-body d-flex flex-column">

                                <!-- Header -->
                                <div class="d-flex justify-content-between align-items-start">
                                    <h5 class="fw-bold mb-1">
                                        @year.Name
                                    </h5>

                                    <span class="badge @(year.IsActive ? "bg-success" : "bg-dark")">
                                        @(year.IsActive ? "Active" : "Inactive")
                                    </span>
                                </div>

                                <!-- Dates -->
                                <div class="small mt-3 opacity-75">
                                    <div>
                                        <i class="bi bi-calendar-event me-1"></i>
                                        Start: @year.StartDate.ToString("dd MMM yyyy")
                                    </div>
                                    <div>
                                        <i class="bi bi-calendar-check me-1"></i>
                                        End: @year.EndDate.ToString("dd MMM yyyy")
                                    </div>
                                </div>

                                <!-- Footer -->
                                <div class="mt-auto pt-3 d-flex justify-content-end">
                                    <a href="@Url.Action("Details", new { id = year.Id })"
                                       class="btn btn-sm me-1 text-primary">
                                        <i data-lucide="eye"></i>
                                    </a>
                                    <a href="@Url.Action("Edit", new { id = year.Id })"
                                       class="btn btn-sm me-1 text-white">
                                        <i data-lucide="pencil"></i>
                                    </a>

                                    <button type="button"
                                            class="btn btn-sm text-dark"
                                            data-bs-toggle="modal"
                                            data-bs-target="#deleteAcademicYearModal"
                                            data-program-id="@year.Id"
                                            data-program-name="@year.Name">
                                        <i data-lucide="trash-2"></i>
                                    </button>
                                </div>

                            </div>
                        </div>
                    </div>
                }

            </div>
        </div>
    </div>
</div>


<div class="modal fade" id="deleteAcademicYearModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content bg-dark text-white border-0 shadow">

            <div class="modal-header border-secondary">
                <h5 class="modal-title d-flex align-items-center gap-2">
                    <i data-lucide="alert-triangle"></i>
                    Confirm Delete
                </h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"
                        aria-label="Close"></button>
            </div>

            <div class="modal-body">
                <p class="mb-2">Are you sure you want to delete this academic year?</p>

                <div class="bg-body-tertiary text-light rounded p-3">
                    <div><span class="text-secondary">Academic Year:</span> <span id="duName" class="fw-semibold"></span></div>

                </div>

                <div class="text-warning small mt-3">
                    This action cannot be undone.
                </div>
            </div>

            <div class="modal-footer border-secondary">
                <button type="button" class="btn btn-outline-light" data-bs-dismiss="modal">
                    Cancel
                </button>

                @using (Html.BeginForm("DeleteConfirmed", "AcademicYear", FormMethod.Post, new { id = "deleteForm" }))
                {
                    @Html.AntiForgeryToken()
                    <input type="hidden" name="id" id="duId" />
                    <button type="submit" class="btn btn-danger">
                        <i data-lucide="trash-2"></i>
                        Delete
                    </button>
                }
            </div>

        </div>
    </div>
</div>

@section scripts {
    <script>
        document.addEventListener("DOMContentLoaded", function () {
            const modal = document.getElementById("deleteAcademicYearModal");

            modal.addEventListener("show.bs.modal", function (event) {
                const btn = event.relatedTarget;

                const id = btn.getAttribute("data-program-id");
                const name = btn.getAttribute("data-program-name");


                document.getElementById("duId").value = id;
                document.getElementById("duName").textContent = name;


                // role badge styling (optional)
                const roleEl = document.getElementById("duRole");
                roleEl.textContent = role;
                roleEl.className = "badge " + (
                    role === "Admin" ? "bg-danger" :
                    role === "Teacher" ? "bg-warning text-dark" :
                    "bg-info text-dark"
                );

                if (window.lucide) lucide.createIcons();
            });

            if (window.lucide) lucide.createIcons();
        });
    </script>
}
