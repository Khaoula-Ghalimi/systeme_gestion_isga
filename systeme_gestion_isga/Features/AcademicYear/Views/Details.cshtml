@model systeme_gestion_isga.Features.AcademicYear.ViewModels.AcademicYearVM
@using systeme_gestion_isga.Features.Program.ViewModels
@{
    ViewBag.Title = "Detail of Academic Year";
}

<div class="container-fluid p-4">
    <div class="d-flex align-content-center justify-content-between mb-5">
        <h4 class="fw-bold text-white mb-0">Details of Academic Year : #@Model.Id</h4>
        <a href='@Url.Action("Index")' class="btn btn-outline-light">
            <i data-lucide="arrow-left"></i>
            Back
        </a>
    </div>

    <div class="card border bg-body-tertiary">
        <div class="card-body p-4">

            <div class="row g-3">
                <div class="col-md-6">
                    <label class="form-label text-white">Name</label>
                    <div class="form-control-plaintext text-white">@Model.Name</div>
                </div>

                <div class="col-md-6">
                    <label class="form-label text-white">Start Date</label>
                    <div class="form-control-plaintext text-white">
                        @(Model.StartDate.ToString("yyyy-MM-dd"))
                    </div>
                </div>

                <div class="col-md-6">
                    <label class="form-label text-white">End Date</label>
                    <div class="form-control-plaintext text-white">
                        @(Model.EndDate.ToString("yyyy-MM-dd"))
                    </div>
                </div>

                <div class="col-md-6 d-flex flex-column">
                    <label class="form-label text-white">Is Active</label>

                    <div class="mt-2">
                        @if (Model.IsActive)
                        {
                            <span class="badge bg-success">Active</span>
                        }
                        else
                        {
                            <span class="badge bg-secondary">Inactive</span>
                        }
                    </div>
                </div>

                <div class="col-12 d-flex gap-2 mt-5 justify-content-end">
                    <a href="@Url.Action("Edit", new { id = Model.Id })" class="btn btn-light">
                        <i data-lucide="pencil"></i>
                        Edit
                    </a>
                </div>
            </div>

        </div>
    </div>

    @using (Html.BeginForm("AddProgramToYear", "AcademicYear", FormMethod.Post, new { id = "programForm", @class = "mb-4 d-none" }))
    {
        @Html.AntiForgeryToken()
        @Html.Hidden("AcademicYearId", Model.Id)

        <div class="border rounded p-3 bg-dark">

            <h6 class="text-white mb-3">
                <i data-lucide="plus-circle"></i>
                Add Program to this Academic Year
            </h6>

            <div class="row g-3">

                <div class="col-md-6">
                    <label class="form-label text-white">Role</label>
                    @Html.DropDownListFor(
                        m => m.Role,
                        new SelectList(Enum.GetValues(typeof(ProgramVM))),
                        new { @class = "form-select", @id = "roleSelect" }
                    )
                    @Html.ValidationMessageFor(m => m.Role, "", new { @class = "text-danger small" })
                </div>

                <div class="col-12 d-flex justify-content-end gap-2">
                    <button type="button" class="btn btn-outline-secondary" onclick="toggleProgramForm()">
                        Cancel
                    </button>

                    <button type="submit" class="btn btn-light">
                        <i data-lucide="save"></i>
                        Submit
                    </button>
                </div>

            </div>
        </div>
    }

    <!-- Programs for this Academic Year -->
    <div class="card border bg-body-tertiary mt-4">
        <div class="card-body p-4">

            <div class="d-flex justify-content-between align-items-center mb-3">
                <h5 class="fw-bold text-white mb-0">
                    <i data-lucide="layers"></i>
                    Programs in this Academic Year
                </h5>

                <button class="btn btn-sm btn-outline-light" type="button" onclick="toggleProgramForm()">
                    <i data-lucide="plus"></i>
                    Add Program
                </button>
            </div>

            <div class="table-responsive">
                <table class="table table-dark table-hover align-middle mb-0">
                    <thead>
                        <tr>
                            <th style="width: 80px">#</th>
                            <th>Program Name</th>
                            <th>Code</th>
                            <th>Duration</th>
                            <th>Levels</th>
                            <th>Status</th>
                            <th style="width: 150px" class="text-end">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr class="text-muted text-center">
                            <td colspan="7">
                                <i data-lucide="database" class="mb-2"></i>
                                <div>No programs assigned to this academic year yet</div>
                            </td>
                        </tr>
                    </tbody>
                </table>
            </div>

        </div>
    </div>

</div>

<script>
    function toggleProgramForm() {
        const form = document.getElementById("programForm");
        form.classList.toggle("d-none");
    }
</script>
